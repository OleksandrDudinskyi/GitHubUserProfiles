<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >


    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/avatar_width"
        android:layout_height="@dimen/avatar_height"
        android:scaleType="fitXY"
        android:layout_marginRight="@dimen/avatar_margin_left"
        android:layout_centerVertical="true"
        android:contentDescription="@string/content_picture"
        android:src="@android:drawable/picture_frame" />


    <TextView
        android:id="@+id/user_login"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_avatar"
        android:layout_marginTop="@dimen/login_margin_top"
        android:layout_alignParentTop="true" />


    <TextView
        android:id="@+id/profile_url"
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/profile_url_margin_top"
        android:layout_alignLeft="@id/user_login"
        android:layout_below="@id/user_login" />


</RelativeLayout>